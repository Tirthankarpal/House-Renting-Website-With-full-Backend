<%-include('../partials/head')%>
<body>
  <%-include('../partials/nav')%>
<main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
    <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
      Here are our host homes:
    </h2>
    <ul class="space-y-8">
  <% registeredHomes.forEach((home) => { %>
    <li class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition duration-300 flex flex-col md:flex-row overflow-hidden">
      <img 
        src="<%= home.PhotoUrl.startsWith('http') ? home.PhotoUrl : '/' + home.PhotoUrl %>" 
        alt="<%= home.houseName %> photo" 
        class="w-full md:w-56 h-56 object-cover">
      <div class="flex-1 p-6 flex flex-col justify-between">
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-2"><%= home.houseName %></h3>
          <p class="text-gray-700 mb-1"><span class="font-semibold">Location:</span> <%= home.Location %></p>
          <p class="text-gray-700 mb-1"><span class="font-semibold">Price:</span> <%= home.Price %></p>
          <p class="text-yellow-500 font-semibold mb-2"><span class="font-semibold">Rating:</span> <%= home.Rating %></p>
          <p class="text-gray-700"><span class="font-semibold">Description:</span> <%= home.Description %></p>
        </div>
        <a href="/host/edit-home/<%= home._id %>?editing=true" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition">Edit</a>
        <form action="/host/delete-home/<%= home._id %>" method="POST" class="mt-4">
          <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition w-full">Delete</button>
        </form>
      </div>
    </li>
  <% }) %>
</ul>
</main>
</body>
</html>