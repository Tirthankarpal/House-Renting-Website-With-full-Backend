<%- include('../partials/head') %>
<body class="bg-gray-50 min-h-screen">
  <%- include('../partials/nav') %>
  <main class="flex items-center justify-center min-h-[80vh]">
    <section class="bg-white shadow-2xl rounded-xl p-10 w-full max-w-md">
      <h2 class="text-3xl text-red-500 font-extrabold text-center mb-8 tracking-tight">Register as a new User</h2>
      <form action="/signup" method="POST" class="space-y-6">
        <%- include('../partials/errors') %>
        <div>
          <label for="firstName" class="block text-gray-700 font-semibold mb-2">First Name</label>
          <input type="text" name="firstName" placeholder="First Name" value="<%=oldInput.firstName?oldInput.firstName:''%>" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition">
        </div>
        <div>
          <label for="lastName" class="block text-gray-700 font-semibold mb-2">Last Name</label>
          <input type="text" name="lastName" placeholder="Last Name" value="<%=oldInput.lastName?oldInput.lastName:''%>" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition">
        </div>
        <div>
          <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
          <input type="email" id="email" name="email" placeholder="Enter Your Email" value="<%=oldInput.email?oldInput.email:''%>" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition">
        </div>
        <div>
          <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
          <input type="password" id="password" name="password" placeholder="Enter Your Password" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition">
        </div>
        <div>
          <label for="confirmPassword" class="block text-gray-700 font-semibold mb-2">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Your Password" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition">
        </div>
        <div>
          <span class="block text-gray-700 font-semibold mb-2">User Type</span>
          <div class="flex space-x-6">
            <label class="flex items-center space-x-2">
              <input type="radio" name="userType" value="guest" id="guest" class="accent-red-500" <% if(oldInput.userType === 'guest'){ %>checked<% } %>/>
              <span class="text-gray-700 font-semibold">Guest</span>
            </label>
            <label class="flex items-center space-x-2">
              <input type="radio" name="userType" value="host" id="host" class="accent-red-500" <% if(oldInput.userType === 'host'){ %>checked<% } %>/>
              <span class="text-gray-700 font-semibold">Host</span>
            </label>
          </div>
        </div>
        <div>
          <label class="flex items-center">
            <input type="checkbox" id="terms" name="terms" required class="accent-red-500 mr-2">
            <span class="text-gray-700 font-semibold">I agree to the Terms and Conditions</span>
          </label>
        </div>
        <button type="submit" class="w-full bg-red-500 text-white py-2 rounded-lg font-semibold hover:bg-red-600 transition shadow">Sign Up</button>
      </form>
      <p class="mt-6 text-center text-gray-600">
        Already have an account?
        <a href="/login" class="text-red-500 hover:underline font-semibold">Login</a>
      </p>
    </section>
  </main>
</body>
</html>
