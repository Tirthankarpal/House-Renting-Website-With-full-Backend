<%- include('../partials/head') %>
<body class="bg-gray-50 min-h-screen">
  <%- include('../partials/nav') %>
  <main class="flex items-center justify-center min-h-[80vh]">
    <section class="bg-white shadow-2xl rounded-xl p-10 w-full max-w-md">
      <h2 class="text-3xl text-red-500 font-extrabold text-center mb-8 tracking-tight">Login</h2>
      <form action="/login" method="POST" class="space-y-6">
        <%- include('../partials/errors') %>
        <div>
          <label for="email" class="block text-gray-700 font-semibold mb-2">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            value="<%=oldInput.email?oldInput.email:''%>"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"
            placeholder="Enter your email"
            autocomplete="username"
          >
        </div>
        <div>
          <label for="password" class="block text-gray-700 font-semibold mb-2">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-400 transition"
            placeholder="Enter your password"
            autocomplete="current-password"
          >
        </div>
        <button
          type="submit"
          class="w-full bg-red-500 text-white py-2 rounded-lg font-semibold hover:bg-red-600 transition shadow"
        >Login</button>
      </form>
      <p class="mt-6 text-center text-gray-600">
        Don't have an account?
        <a href="/signup" class="text-red-500 hover:underline font-semibold">Sign up</a>
      </p>
    </section>
  </main>
</body>
</html>