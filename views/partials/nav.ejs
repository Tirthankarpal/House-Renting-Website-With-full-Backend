<header class="bg-red-500 text-white p-4 shadow-md">
  <nav class="container mx-auto flex items-center justify-between">
    <!-- Left: Brand and Main Links -->
    <div class="flex items-center space-x-6">
      <a
        href="/"
        class="text-2xl font-bold tracking-wide hover:text-red-200 transition"
      >airbnb</a>
      <% if(isLoggedIn){ %>
        <%if(user&&user.userType==="guest"){%>
        <ul class="flex space-x-4 ml-6">
          <li>
            <a href="/homes" class="<%=currentPage === 'home' ? 'bg-red-400' : 'hover:bg-red-400'%> py-2 px-4 rounded transition">Home-List</a>
          </li>
          <li>
            <a href="/favourites" class="<%=currentPage === 'Favourites' ? 'bg-red-400' : 'hover:bg-red-400'%> py-2 px-4 rounded transition">Favourites</a>
          </li>
          <li>
            <a href="/bookings" class="<%=currentPage === 'bookings' ? 'bg-red-400' : 'hover:bg-red-400'%> py-2 px-4 rounded transition">Bookings</a>
          </li>
          </ul>
        <% } else if(user&&user.userType==="host"){ %>
        <ul class="flex space-x-4 ml-6">
          <li>
            <a href="/host/host-home" class="<%=currentPage === 'host-home' ? 'bg-red-400' : 'hover:bg-red-400'%> py-2 px-4 rounded transition">Host Home</a>
          </li>
          <li>
            <a href="/host/add-home" class="<%=currentPage === 'addhome' ? 'bg-red-400' : 'hover:bg-red-400'%> py-2 px-4 rounded transition">Add Home</a>
          </li>
        </ul>
        <% }%>
      <% } %>
    </div>
    <!-- Right: Auth Buttons -->
    <div>
      <% if(!isLoggedIn){ %>
        <a
          href="/login"
          class="bg-white text-red-500 font-semibold py-2 px-6 rounded-lg shadow hover:bg-red-100 transition"
        >Login</a>
      <% } else { %>
        <form action="/logout" method="POST">
          <button
            type="submit"
            class="bg-white text-red-500 font-semibold py-2 px-6 rounded-lg shadow hover:bg-red-100 transition"
          >
            Logout
          </button>
        </form>
      <% } %>
    </div>
  </nav>
</header>